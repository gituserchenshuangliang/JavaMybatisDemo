<?xml version="1.0" encoding="UTF-8" ?>
<!-- 导入校验文件 -->
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "mybatis-3-config.dtd">
<configuration>
	
	<!-- 加载数据库属性文件 -->
	<properties resource="config/db.properties"/>
	
	<!-- settings是 MyBatis 中极为重要的调整设置，它们会改变 MyBatis 的运行时行为。 -->
	 <settings>
        <!-- 打印查询语句 -->
        <setting name="logImpl" value="STDOUT_LOGGING" />
	</settings>
	
	<!-- 别名设置 -->
	<typeAliases>
		<package name="com.mybatis.entity"/>
	</typeAliases>
	
	<!-- 配置数据库环境 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driver}"></property>
				<property name="url" value="${jdbc.url}"></property>
				<property name="username" value="${jdbc.username}"></property>
				<property name="password" value="${jdbc.password}"></property>
				
				<!-- <property name="driver" value="com.mysql.jdbc.Driver"></property>
				<property name="url" value="jdbc\:mysql\://localhost\:3306/chen?serverTimezone\=UTC "></property>
				<property name="username" value="chen"></property>
				<property name="password" value="chen"></property> -->
			</dataSource>
		</environment>
	</environments>
	
	<!--加载映射文件 -->
	<mappers>
		<!-- <mapper resource="src/main/resources/mapper/teacherMapper.xml"/> -->
		<mapper resource="mapper/teacherMapper.xml"/>
	</mappers>
</configuration>
